# Inicializar contadores
positivos = 0
negativos = 0

# Bucle para ingresar valores hasta que se ingrese 0
while True:
    valor = int(input("Ingrese un valor (ingrese 0 para terminar): "))

    if valor == 0:
        break  # Salir del bucle si se ingresa 0
    elif valor > 0:
        positivos += 1
    else:
        negativos += 1

# Mostrar el gr√°fico
print("Positivos:", '*' * positivos)
print("Negativos:", '*' * negativos)
